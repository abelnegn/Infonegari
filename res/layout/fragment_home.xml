<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0ECEC"
	android:orientation="vertical">  
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#232224"
	        android:orientation="vertical">        

	        <TextView
	            android:id="@+id/short_number_txt"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#FFFFFF"
		        android:text="@string/txt_header_info"
		        android:textStyle="bold"
		        android:textSize="20dp"/>
	    </LinearLayout>	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="100dp"
	        android:background="@drawable/background_ads"
	        android:orientation="vertical">     
	        
	        <TextView
		        android:id="@+id/notification_text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#3B393E"
		        android:textStyle="bold"
		        android:textSize="20dp"
		        android:layout_gravity="bottom"/>  
		     

	    </LinearLayout>	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"	        
	        android:background="@drawable/background_news"
	        android:orientation="vertical">    
	          
	        <ImageSwitcher
		        android:id="@+id/info_imageSwitcher"
		        android:layout_width="match_parent"
		        android:layout_height="300dp" 
		        android:keepScreenOn="true"/>
	        
	    </LinearLayout>   
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/background_ads"
	        android:orientation="vertical">    
	        
	        <ImageSwitcher
		        android:id="@+id/adi_imageSwitcher"
		        android:layout_width="match_parent"
		        android:layout_height="80dp"/>
	    </LinearLayout>    	    
    </LinearLayout>    
</ScrollView>
